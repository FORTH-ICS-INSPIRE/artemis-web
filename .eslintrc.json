{
    "settings": {
        "import/resolver": {
          "node": {
            "extensions": [".js", ".jsx", ".ts", ".tsx"],
            "paths": ["pages"]
          }
        }
      },
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        ".prettierrc.json",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
            "react/jsx-filename-extension": "off",
            "no-use-before-define": "off",
            "@typescript-eslint/no-use-before-define": ["error", {"variables": false}],
            "import/extensions": [
                "error",
                "ignorePackages",
                {
                  "js": "never",
                  "jsx": "never",
                  "ts": "never",
                  "tsx": "never"
                }
             ]
    }
}
